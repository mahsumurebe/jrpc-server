{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "./",
    "outDir": "./lib",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
